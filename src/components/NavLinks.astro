---
import type { NavLinkType } from "../types";

interface Props {
  items: NavLinkType[];
}
const { items } = Astro.props;
---

{
  items && items.length > 0 && (
    <nav aria-label="Navigation principale" class="flex-1">
      <ul class="justify-center gap-4 lg:flex" role="menubar">
        {items.map((item: NavLinkType) => (
          <li class="max-lg:flex-col">
            <a
              href={item.url}
              aria-label={`Aller voir${item.label}`}
              role="menuitem"
              class="text-secondary-foreground hover:text-primary rounded-xs inline-block px-4 py-2 text-xl font-bold uppercase tracking-wide ease-in-out focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-current lg:text-base"
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  )
}
