---
import SocialNetwork from "./SocialNetwork.astro";
import data from "../data/infoGeneral.json";

const { address, mail, phone } = data.contact;

---
<footer class="bg-primary text-foreground-accent ">
    <div class="pt-16 pb-4 gap-12 flex flex-col max-w-7xl mx-auto">
        <h2 class="uppercase font-bold text-3xl text-center">Contactez-nous</h2>
        <div class="flex justify-between items-center">
            <div class="flex items-center gap-10">
                <img src="/src/assets/images/jaguar.png" alt="illustration-jaguar" class="h-32 w-auto" />
                <div class="flex flex-col">
                    <h3 class="uppercase font-bold text-xl mb-4">Lunedit</h3>
                    <p>{address}</p>
                    <p>{mail}</p>
                    <p>{phone}</p>
                </div>
            </div>

            <div class="flex flex-col items-center gap-4">
                <h2 class="font-bold uppercase">Retrouvez-nous sur</h2>
                <SocialNetwork items={data.social} />
            </div>
        </div>
        <div class="flex justify-center items-center">
            <p>&copy; Lunedit 2025 - </p>
            <a href="/mentions">Mentions l√©gales</a>
        </div>
        
    </div>
</footer>