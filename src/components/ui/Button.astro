---
interface ButtonProps {
  variant?: "primary" | "secondary" | "tertiary";
  size?: "small" | "medium" | "large";
  class?: string;
  href?: string;
}

const {
  variant = "primary",
  size = "medium",
  class: $class = "",
  href,
}: ButtonProps = Astro.props;

const sizes = {
  small: "px-3 py-1 text-sm",
  medium: "px-5 py-2 text-base",
  large: "px-6 py-3 text-lg",
};

function cls(...classes: string[]) {
  return classes.filter(Boolean).join(" ");
}

const base =
  "inline-flex items-center justify-center font-medium text-center no-underline select-none rounded-xl";

const variants = {
  primary: "bg-black text-white hover:bg-black/90",
  secondary: "bg-gray-200 text-black hover:bg-gray-300",
  tertiary: "border border-black text-black hover:bg-black hover:text-white",
};

const Component = href ? "a" : "button";
---

<Component
  class={cls(base, variants[variant], sizes[size], $class)}
  href={href}
>
  <slot />
</Component>
