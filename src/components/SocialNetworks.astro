---
import { Icon } from "astro-icon/components";

const { items, size = 24 } = Astro.props;

import type { SocialItemType } from "../types";
---

{
  items && items.length > 0 && (
    <ul class="flex items-center gap-1 max-lg:justify-center">
      {items.map(({ label, url, icon }: SocialItemType) => (
        <li>
          <a
            class="rounded-xs hover:scale-120 block p-2 text-2xl transition-transform focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-current"
            href={url}
            target="_blank"
            rel="noopener noreferrer"
            title={`Retrouvez-moi sur ${label}`}
            aria-label={`Retrouvez-moi sur ${label}`}
          >
            {icon ? <Icon name={icon} size={size} aria-hidden /> : label}
          </a>
        </li>
      ))}
    </ul>
  )
}
